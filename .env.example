# AWS Credentials (if not using IAM roles)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_DEFAULT_REGION=us-east-1

# AWS Bedrock Model IDs
BEDROCK_EMBEDDINGS_MODEL_ID=amazon.titan-embed-text-v1
BEDROCK_LLM_MODEL_ID=anthropic.claude-v2

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://search-your-domain.region.es.amazonaws.com
OPENSEARCH_INDEX=rag-documents

# SageMaker Pipeline Settings
SM_PIPELINE_NAME=GenAIRAGPipeline-dev
SM_PIPELINE_ROLE_ARN=arn:aws:iam::123456789012:role/SageMakerExecutionRole
SM_MODEL_PACKAGE_GROUP=GenAIRAGModels-dev

# S3 Artifact Bucket for SageMaker
S3_ARTIFACT_BUCKET=your-s3-artifact-bucket-name

# Container Image URIs for Processing & Training
PROCESSOR_IMAGE_URI=123456789012.dkr.ecr.region.amazonaws.com/processor-image:latest
TRAINING_IMAGE_URI=123456789012.dkr.ecr.region.amazonaws.com/training-image:latest